{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ESNext",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "strict": true,
    "strictNullChecks": true,
    "strictBindCallApply": false,
    "strictPropertyInitialization": false,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "baseUrl": ".",
    "paths": {
      "@ignite-lab-nest/entities/*": ["./src/app/entities/*"],
      "@ignite-lab-nest/repositories/*": ["./src/app/repositories/*"],
      "@ignite-lab-nest/use-cases/*": ["./src/app/use-cases/*"],
      "@ignite-lab-nest/utils/*": ["./src/utils/*"],
      "@ignite-lab-nest/in-memory-repositories/*": [
        "./test/in-memory-repositories/*"
      ]
    }
  }
}
